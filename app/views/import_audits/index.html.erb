<% content_for :title, "CSV Import Logs - Dashboard" %>

<div class="container-fluid py-4" data-controller="import-audits">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 fw-bold text-dark mb-1">CSV Import Logs</h1>
          <p class="text-muted mb-0">Track the status and results of all your CSV file imports</p>
        </div>
        <%= link_to dashboard_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
              <i class="bi bi-file-earmark-arrow-up fs-4 text-primary"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Total Imports</h6>
              <h3 class="fw-bold mb-0"><%= number_with_delimiter(@stats[:total_imports]) %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
              <i class="bi bi-check-circle fs-4 text-success"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Successfully Processed</h6>
              <h3 class="fw-bold mb-0 text-success"><%= number_with_delimiter(@stats[:processed_imports]) %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
              <i class="bi bi-clock fs-4 text-warning"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Pending Processing</h6>
              <h3 class="fw-bold mb-0 text-warning"><%= number_with_delimiter(@stats[:pending_imports]) %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
              <i class="bi bi-x-circle fs-4 text-danger"></i>
            </div>
            <div>
              <h6 class="text-muted mb-1">Failed Imports</h6>
              <h3 class="fw-bold mb-0 text-danger"><%= number_with_delimiter(@stats[:failed_imports]) %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <%= form_with url: dashboard_import_audits_path, method: :get, local: true do |form| %>
          <div class="row g-3">
            <div class="col-lg-3">
              <label class="form-label fw-semibold">Search Filename</label>
              <%= form.text_field :search, 
                                   placeholder: "Search by filename...", 
                                   class: "form-control",
                                   value: params[:search] %>
            </div>
            <div class="col-lg-2">
              <label class="form-label fw-semibold">Status</label>
              <%= form.select :status_filter, 
                               options_for_select([['All', ''], ['Processed', 'processed'], ['Pending', 'pending'], ['Failed', 'failed']], params[:status_filter]),
                               {}, 
                               { class: "form-select" } %>
            </div>
            <div class="col-lg-2">
              <label class="form-label fw-semibold">Type</label>
              <%= form.select :type_filter, 
                               options_for_select([['All', ''], ['Affiliate', 'affiliate']], params[:type_filter]),
                               {}, 
                               { class: "form-select" } %>
            </div>
            <div class="col-lg-2">
              <label class="form-label fw-semibold">From Date</label>
              <%= form.date_field :date_from, 
                                   class: "form-control",
                                   value: params[:date_from] %>
            </div>
            <div class="col-lg-2">
              <label class="form-label fw-semibold">To Date</label>
              <%= form.date_field :date_to, 
                                   class: "form-control",
                                   value: params[:date_to] %>
            </div>
            <div class="col-lg-1 d-flex align-items-end">
              <%= form.submit "Filter", class: "btn btn-primary w-100" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Import Logs Table -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
          <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
              <i class="bi bi-list-ul me-2 text-primary"></i>
              <%= number_with_delimiter(@total_count) %> Import Logs
            </h6>
            <div class="text-muted small">
              Showing <%= @offset + 1 %>-<%= [@offset + @per_page, @total_count].min %> of <%= number_with_delimiter(@total_count) %>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th class="border-0 fw-semibold py-3">File Details</th>
                <th class="border-0 fw-semibold py-3">Status</th>
                <th class="border-0 fw-semibold py-3">Results</th>
                <th class="border-0 fw-semibold py-3">Processing Time</th>
                <th class="border-0 fw-semibold py-3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @import_audits.each do |audit| %>
              <tr>
                <td class="py-3">
                  <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-secondary bg-opacity-10 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                      <i class="bi bi-file-earmark-spreadsheet text-secondary"></i>
                    </div>
                    <div>
                      <%= link_to import_audit_path(audit), class: "text-decoration-none" do %>
                      <div class="fw-semibold text-primary hover-underline"><%= truncate(audit.filename, length: 40) %></div>
                      <% end %>
                      <small class="text-muted">
                        <i class="bi bi-tag me-1"></i>
                        <%= audit.import_type.humanize %> CSV
                      </small>
                    </div>
                  </div>
                </td>
                <td class="py-3">
                  <% if audit.status == 'processed' %>
                  <span class="badge bg-success px-3 py-2">
                    <i class="bi bi-check-circle me-1"></i>
                    Successfully Processed
                  </span>
                  <% elsif audit.status == 'pending' %>
                  <span class="badge bg-warning px-3 py-2">
                    <i class="bi bi-clock me-1"></i>
                    Pending Processing
                  </span>
                  <% elsif audit.status == 'failed' %>
                  <span class="badge bg-danger px-3 py-2">
                    <i class="bi bi-x-circle me-1"></i>
                    Import Failed
                  </span>
                  <% else %>
                  <span class="badge bg-secondary px-3 py-2">
                    <i class="bi bi-question-circle me-1"></i>
                    <%= audit.status.humanize %>
                  </span>
                  <% end %>
                </td>
                <td class="py-3">
                  <div class="d-flex align-items-center gap-3">
                    <div class="text-center">
                      <div class="fw-bold text-success"><%= number_with_delimiter(audit.total_successful_rows || 0) %></div>
                      <small class="text-muted">Imported</small>
                    </div>
                    <div class="text-center">
                      <div class="fw-bold text-danger"><%= number_with_delimiter(audit.total_failed_rows || 0) %></div>
                      <small class="text-muted">Failed</small>
                    </div>
                  </div>
                </td>
                <td class="py-3">
                  <div>
                    <% if audit.processed_at.present? %>
                    <div class="text-dark"><%= audit.processed_at.strftime("%b %d, %Y") %></div>
                    <small class="text-muted">
                      <i class="bi bi-clock me-1"></i>
                      <%= audit.processed_at.strftime("%I:%M %p") %>
                    </small>
                    <% else %>
                    <div class="text-muted">
                      <i class="bi bi-dash me-1"></i>
                      Not processed yet
                    </div>
                    <% end %>
                  </div>
                </td>
                <td class="py-3">
                  <div class="d-flex gap-2">
                    <%= link_to import_audit_path(audit), class: "btn btn-sm btn-outline-primary", title: "View detailed import log" do %>
                    <i class="bi bi-eye"></i>
                    <% end %>
                    <% if audit.error_message.present? || audit.error_details.present? %>
                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= audit.error_message.present? ? audit.error_message : 'Import failed with errors' %>">
                      <i class="bi bi-exclamation-triangle"></i>
                    </button>
                    <% end %>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="card-footer bg-light border-0 py-3">
          <div class="row align-items-center">
            <div class="col-md-6">
              <div class="text-muted">
                Showing <strong><%= @offset + 1 %></strong> to <strong><%= [@offset + @per_page, @total_count].min %></strong>
                of <strong><%= number_with_delimiter(@total_count) %></strong> results
              </div>
            </div>
            <div class="col-md-6">
              <nav aria-label="Pagination" class="d-flex justify-content-md-end justify-content-center mt-3 mt-md-0">
                <ul class="pagination mb-0">
                  <% if @page > 1 %>
                  <li class="page-item">
                    <%= link_to dashboard_import_audits_path(@filter_params.merge(page: @page - 1)), class: "page-link" do %>
                    <i class="bi bi-chevron-left"></i>
                    <% end %>
                  </li>
                  <% end %>

                  <% start_page = [@page - 2, 1].max %>
                  <% end_page = [@page + 2, @total_pages].min %>
                  <% (start_page..end_page).each do |p| %>
                  <li class="page-item <%= 'active' if p == @page %>">
                    <% if p == @page %>
                    <span class="page-link"><%= p %></span>
                    <% else %>
                    <%= link_to p, dashboard_import_audits_path(@filter_params.merge(page: p)), class: "page-link" %>
                    <% end %>
                  </li>
                  <% end %>

                  <% if @page < @total_pages %>
                  <li class="page-item">
                    <%= link_to dashboard_import_audits_path(@filter_params.merge(page: @page + 1)), class: "page-link" do %>
                    <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </li>
                  <% end %>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hover-underline:hover {
    text-decoration: underline !important;
  }
</style>

<script>
  // Initialize tooltips
  document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })
  })
</script>