<% content_for :title, "Importful - The Future of Affiliate Data Import" %>

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
  <div class="container py-5">
    <div class="row align-items-center min-vh-75">
      <div class="col-lg-6">
        <div class="hero-content">
          <div class="badge hero-badge text-white mb-3 px-3 py-2 fw-semibold">
            <i class="bi bi-lightning-charge me-2 badge-icon text-warning"></i>
            The Future of Data Import
          </div>
          <h1 class="display-4 fw-bold mb-4 hero-title">
            Transform Your
            <span class="text-gradient">Affiliate Data</span>
            with Intelligent CSV Import
          </h1>
          <p class="lead mb-4 text-white-75 hero-subtitle">
            Importful revolutionizes how businesses handle affiliate marketing data.
            Upload, validate, and import your CSV files with unprecedented ease and reliability.
          </p>
          <div class="d-flex flex-wrap gap-3 mb-4 hero-buttons">
            <%= link_to dashboard_index_path, class: "btn btn-warning btn-lg px-4 py-3 fw-semibold" do %>
            <i class="bi bi-speedometer2 me-2"></i>
            View Dashboard
            <% end %>
            <button class="btn btn-outline-light btn-lg px-4 py-3 fw-semibold">
              <i class="bi bi-play-circle me-2"></i>
              Watch Demo
            </button>
          </div>
          <div class="d-flex align-items-center text-white-75 hero-trust">
            <i class="bi bi-shield-check me-2 text-warning"></i>
            <small>Trusted by leading affiliate networks worldwide</small>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="hero-visual position-relative">
          <div class="floating-card bg-white rounded-4 shadow-lg p-4 mb-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-file-earmark-spreadsheet text-success"></i>
              </div>
              <div>
                <h6 class="mb-0 text-dark">affiliates_data.csv</h6>
                <small class="text-muted">198,331 records processed</small>
              </div>
            </div>
            <div class="progress mb-2" style="height: 8px;">
              <div class="progress-bar bg-success" style="width: 100%"></div>
            </div>
            <small class="text-success">
              <i class="bi bi-check-circle me-1"></i>
              Import completed successfully
            </small>
          </div>

          <div class="floating-stats bg-white rounded-4 shadow-lg p-4">
            <div class="row text-center">
              <div class="col-4">
                <h4 class="fw-bold text-primary mb-1"><%= number_with_delimiter(@stats[:total_affiliates]) %></h4>
                <small class="text-muted">Affiliates</small>
              </div>
              <div class="col-4">
                <h4 class="fw-bold text-success mb-1"><%= number_with_delimiter(@stats[:total_merchants]) %></h4>
                <small class="text-muted">Merchants</small>
              </div>
              <div class="col-4">
                <h4 class="fw-bold text-warning mb-1">$<%= number_with_delimiter(@stats[:total_commissions], precision: 0) %></h4>
                <small class="text-muted">Revenue</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

