<% content_for :title, "Importful - The Future of Affiliate Data Import" %>

<!-- Hero Section -->
<section class="hero-section position-relative overflow-hidden">
  <!-- Animated Background -->
  <div class="hero-bg-animation"></div>
  <div class="hero-particles"></div>

  <div class="container py-5 position-relative">
    <div class="row align-items-center min-vh-100">
      <div class="col-lg-6 order-2 order-lg-1">
        <div class="hero-content">
          <!-- Animated Badge -->
          <div class="hero-badge-container mb-4" data-aos="fade-up" data-aos-delay="100">
            <div class="hero-badge">
              <div class="badge-glow"></div>
              <i class="bi bi-lightning-charge me-2 badge-icon"></i>
              <span class="badge-text">The Future of Data Import</span>
              <div class="badge-shimmer"></div>
            </div>
          </div>

          <!-- Main Heading -->
          <h1 class="hero-title mb-4" data-aos="fade-up" data-aos-delay="200">
            Transform Your
            <span class="text-gradient-animated">Affiliate Data</span>
            with Intelligent CSV Import
          </h1>

          <!-- Subtitle -->
          <p class="hero-subtitle mb-5" data-aos="fade-up" data-aos-delay="300">
            Importful revolutionizes how businesses handle affiliate marketing data.
            Upload, validate, and import your CSV files with unprecedented ease and reliability.
          </p>

          <!-- CTA Buttons -->
          <div class="hero-buttons mb-5" data-aos="fade-up" data-aos-delay="400">
            <%= link_to 'imports/new', class: "btn btn-primary-gradient btn-lg me-3 mb-3 cta-primary" do %>
            <span class="btn-content">
              <i class="bi bi-speedometer2 me-2"></i>
              Import Data
            </span>
            <div class="btn-shine"></div>
            <% end %>
            <button class="btn btn-outline-glass btn-lg mb-3 cta-secondary" data-bs-toggle="modal" data-bs-target="#demoModal">
              <i class="bi bi-play-circle me-2"></i>
              Watch Demo
            </button>
          </div>

          <!-- Trust Indicators -->
          <div class="hero-trust" data-aos="fade-up" data-aos-delay="500">
            <div class="trust-badge">
              <i class="bi bi-shield-check me-2"></i>
              <span>Trusted by 10,000+ affiliate networks worldwide</span>
            </div>
            <div class="trust-stats mt-3">
              <div class="stat-item">
                <span class="stat-number">500M+</span>
                <span class="stat-label">Records Processed</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">99.9%</span>
                <span class="stat-label">Uptime</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">
                  < 2s</span>
                    <span class="stat-label">Avg Processing</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6 order-1 order-lg-2">
        <div class="hero-visual" data-aos="fade-left" data-aos-delay="300">
          <!-- Interactive Dashboard Preview -->
          <div class="dashboard-preview">
            <div class="preview-window">
              <div class="window-header">
                <div class="window-controls">
                  <span class="control red"></span>
                  <span class="control yellow"></span>
                  <span class="control green"></span>
                </div>
                <div class="window-title">importful.com</div>
              </div>

              <!-- Animated Import Card -->
              <div class="import-card floating-card">
                <div class="card-header">
                  <div class="file-icon">
                    <i class="bi bi-file-earmark-spreadsheet"></i>
                  </div>
                  <div class="file-info">
                    <h6 class="file-name">affiliates_data.csv</h6>
                    <span class="file-size">198,331 records</span>
                  </div>
                  <div class="status-indicator success">
                    <i class="bi bi-check-circle"></i>
                  </div>
                </div>

                <div class="progress-container">
                  <div class="progress-bar">
                    <div class="progress-fill"></div>
                  </div>
                  <span class="progress-text">Import completed successfully</span>
                </div>
              </div>

              <!-- Animated Stats Cards -->
              <div class="stats-grid">
                <div class="stat-card" data-aos="zoom-in" data-aos-delay="600">
                  <div class="stat-icon primary">
                    <i class="bi bi-people"></i>
                  </div>
                  <div class="stat-value" data-count="<%= @stats[:total_affiliates] %>">0</div>
                  <div class="stat-label">Affiliates</div>
                </div>

                <div class="stat-card" data-aos="zoom-in" data-aos-delay="700">
                  <div class="stat-icon success">
                    <i class="bi bi-shop"></i>
                  </div>
                  <div class="stat-value" data-count="<%= @stats[:total_merchants] %>">0</div>
                  <div class="stat-label">Merchants</div>
                </div>

                <div class="stat-card" data-aos="zoom-in" data-aos-delay="800">
                  <div class="stat-icon warning">
                    <i class="bi bi-currency-dollar"></i>
                  </div>
                  <div class="stat-value" data-count="<%= @stats[:total_commissions].to_i %>">$0</div>
                  <div class="stat-label">Revenue</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="floating-elements">
            <div class="floating-icon" data-aos="fade-up" data-aos-delay="900">
              <i class="bi bi-graph-up-arrow"></i>
            </div>
            <div class="floating-icon" data-aos="fade-up" data-aos-delay="1000">
              <i class="bi bi-shield-check"></i>
            </div>
            <div class="floating-icon" data-aos="fade-up" data-aos-delay="1100">
              <i class="bi bi-lightning"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
  <div class="container py-5">
    <!-- Section Header -->
    <div class="row mb-5">
      <div class="col-lg-8 mx-auto text-center">
        <div class="section-badge mb-4" data-aos="fade-up">
          <i class="bi bi-stars me-2"></i>
          Why Choose Importful?
        </div>
        <h2 class="section-title mb-4" data-aos="fade-up" data-aos-delay="100">
          Built for <span class="text-gradient">Performance</span> & <span class="text-gradient">Scale</span>
        </h2>
        <p class="section-subtitle" data-aos="fade-up" data-aos-delay="200">
