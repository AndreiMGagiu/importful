<% content_for :title, "Affiliates - Dashboard" %>

<div class="container-fluid py-4" data-controller="affiliates-table">
  <!-- Modern Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 fw-bold text-dark mb-1">Affiliates</h1>
          <p class="text-muted mb-0">Manage and view all affiliate partners</p>
        </div>
        <%= link_to dashboard_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <!-- Modern Filters Card -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <%= form_with url: dashboard_affiliates_path, method: :get, 
                       data: { 
                         affiliates_table_target: "filterForm"
                       }, 
                       local: false do |form| %>
          <div class="row g-3">
            <div class="col-lg-4">
              <label class="form-label fw-semibold">Search Affiliates</label>
              <%= form.text_field :search, 
                                   placeholder: "Search by name or email...", 
                                   class: "form-control",
                                   value: params[:search],
                                   data: { action: "input->affiliates-table#debounceFilter" } %>
            </div>
            <div class="col-lg-3">
              <label class="form-label fw-semibold">Merchant</label>
              <%= form.text_field :merchant_filter, 
                                   placeholder: "Filter by merchant...", 
                                   class: "form-control",
                                   value: params[:merchant_filter],
                                   data: { action: "input->affiliates-table#debounceFilter" } %>
            </div>
            <div class="col-lg-2">
              <label class="form-label fw-semibold">Min Commission</label>
              <%= form.number_field :commission_min, 
                                     placeholder: "0", 
                                     step: 1,
                                     class: "form-control",
                                     value: params[:commission_min],
                                     data: { action: "change->affiliates-table#filterAffiliates" } %>
            </div>
            <div class="col-lg-2">
              <label class="form-label fw-semibold">Show</label>
              <%= form.select :per_page, 
                               options_for_select([['12', 12], ['25', 25], ['50', 50], ['100', 100]], params[:per_page] || 12),
                               {}, 
                               { class: "form-select", data: { action: "change->affiliates-table#filterAffiliates" } } %>
            </div>
            <div class="col-lg-1 d-flex align-items-end">
              <%= link_to dashboard_affiliates_path, class: "btn btn-outline-secondary w-100", title: "Clear filters" do %>
              <i class="bi bi-arrow-clockwise"></i>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Results Table -->
  <div class="row">
    <div class="col-12">
      <div id="table_container" data-affiliates-table-target="tableContainer">
        <%= render 'affiliates_table', 
                   affiliates: @affiliates,
                   page: @page,
                   per_page: @per_page,
                   total_count: @total_count,
                   total_pages: @total_pages,
                   offset: @offset %>
      </div>
    </div>
  </div>
</div>